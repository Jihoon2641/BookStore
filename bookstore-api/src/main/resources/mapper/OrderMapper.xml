<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bookstore.bookstore_api.order.adapter.out.persistence.OrderMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders (
            user_id, 
            order_date, 
            order_items, 
            status
        ) VALUES (
            #{userId}, 
            #{orderDate}, 
            #{orderItems}, 
            #{status}
        )
    </insert>

</mapper>